<div class="container">
  <h4 class="p-4 font-weight-bold">投稿一覧</h4>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-3 border text-center">
        <p><%= link_to admin_item_path(item.id) do %>
        <%= image_tag item.get_image,size: "200x200" %><% end %>
        </p>
        <p><%= link_to item.name, admin_item_path(item.id) %></p>
        <p><%= link_to item.user.name , admin_user_path(item.user.id) %></p><!--違うかもしれん-->
        <p>コメント数:<%= item.comments.count %></p>
      </div>
    <% end %>
  </div>
</div>
<div class="pagination justify-content-center">
  <%= paginate @items %><!--変わるかも-->
</div>