<h4>コメント一覧</h4>
<div>
  <% @item.comments.each do |comment| %>
    <p><%= image_tag comment.user.get_profile_image, size: "100x100" %></p><!--userモデルにメソッドを書く-->
    <%= comment.user.name %>
    <%= comment.comment_content %>
  <% end %>
</div>
<div>
  <%= form_with model: [@item, @comment] do |f| %>
   <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
   <%= f.submit "送信する" %>
  <% end %>
</div>
