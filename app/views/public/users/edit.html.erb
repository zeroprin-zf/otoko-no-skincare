<%= render 'public/items/errors', item: @user %>
<h4>ユーザー編集</h4>
<div class="container">
  <div class="row">
  <%= form_with model: @user do |f| %>
    <div>
        <label for="inputName">ユーザー名</label>
        <%= f.text_field :name, autofoucus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div>
        <label for="inputImage">ユーザー画像</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div>
        <label for="inputIntroduction">自己紹介</label>
        <%= f.text_area :introduction, autofoucus: true, id:"inputIntroduction", placeholder:"自己紹介" , size:"50*20"%>
      </div>
      <table>
        <tr>
          <td class="pr-4"><%= f.submit '変更を保存', class: "btn btn-primary"%></td>
          <td><%= link_to "退会する",  confirm_users_path ,class: "btn btn-danger" %></td>
        </tr>
      </table>
  <% end %>
  </div>
</div>
