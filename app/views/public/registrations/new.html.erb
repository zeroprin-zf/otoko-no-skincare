<div class="container-fluid mt-5">
<%= flash[:error] %>
 <h5 class="font-weight-bold w-25 text-center ml-5">新規登録</h5>
  <div class="row mt-3 mx-auto">
   <div class="col-9 mx-auto">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table class="table table-borderless ml-5" style="display:inline-block">
    <thead></thead>
        <tbody>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td colspan="5"><%= f.email_field :email, size:"60*20", autofocus: true, placeholder:"sample@example.com", autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :名前 %></td>
            <td colspan="5"><%= f.text_field :name, size:"60*20", autofocus: true, placeholder:"たかし", autocomplete: "name" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード %></td>
            <td><%= f.password_field :password, size:"60*20", autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "新規登録" ,class: 'btn btn-success mt-2 btn-lg' %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
   <%= render "public/shared/links" %>
   </div>
  </div>
</div>

